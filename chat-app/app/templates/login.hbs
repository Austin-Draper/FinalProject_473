<div class="jumbotron text-center">

  <div class="jumbotron text-center">
    <h3>Login</h3>

    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" value=userEmail class="form-control" placeholder="Enter your e-mail" autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="password" value=userPassword class="form-control" placeholder="Enter your Password"}}
    </div>

    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
      <button disabled= {{isDisabled}} {{action 'logIn'}} class="btn btn-primary login-button btn-block">Login</button>
      <button {{action 'logOut'}} class="btn btn-primary login-button btn-block">Logout</button>

      <h1>{{session.currentUser.email}}</h1>
    </div>
  </div>
</div>
